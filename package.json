{
  "name": "Endplayer",
  "version": "0.2.0",
  "description": "Electron N Danmaku Player",
  "main": "main.js",
  "author": "a-wing <1@233.email>",
  "license": "GPL-3.0",
  "scripts": {
    "use-system-ffmpeg": "gcc -Wl,--no-as-needed -shared -lavformat -o node_modules/electron/dist/libffmpeg.so",
    "start": "npx electron .",
    "build": "tsc && webpack --mode production --config webpack.config.renderer.js",
    "dev-renderer": "webpack --watch --mode development --config webpack.config.renderer.js",
    "dev": "concurrently --kill-others 'npx tsc -w' 'npm run dev-renderer' 'npm run start'"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.1",
    "electron": "^4.2.8",
    "typescript": "^3.5.3",
    "webpack": "^5.0.0-alpha.18",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "assjs": "git+https://github.com/a-wing/ass.git",
    "danmaku": "^1.3.5",
    "mpv.js": "^0.3.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
